<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarButton" parent="">
        <item name="materialButtonStyle">@style/ActionButtonBlue</item>
        <item name="progressBarWidth">24dp</item>
        <item name="progressBarHeight">24dp</item>
        <item name="progressBarDrawable">@drawable/progress_bar_color</item>
    </style>

    <style name="ActionButtonBlue" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">14dp</item>
    </style>


</resources>
